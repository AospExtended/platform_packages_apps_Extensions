<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/system_category"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings">

         <org.aospextended.extensions.preference.CardviewPreference
            android:key="general_tweaks"
            android:fragment="org.aospextended.extensions.fragments.GeneralTweaks"
            android:icon="@drawable/ic_general_tweaks"
            android:title="@string/general_tweaks_title" />

          <org.aospextended.extensions.preference.CardviewPreference
            android:key="animations"
            android:fragment="org.aospextended.extensions.fragments.Animations"
	    android:icon="@drawable/ic_animations"
            android:title="@string/animations_title" />

         <org.aospextended.extensions.preference.CardviewPreference
            android:key="buttons"
            android:fragment="org.aospextended.extensions.fragments.Buttons"
            android:icon="@drawable/ic_buttons"
            android:title="@string/buttons_title" />

         <org.aospextended.extensions.preference.CardviewPreference
            android:key="gaming_mode"
            android:fragment="org.aospextended.extensions.fragments.GamingMode"
            android:icon="@drawable/ic_gaming"
            android:title="@string/gaming_mode_title" />

         <org.aospextended.extensions.preference.CardviewPreference
            android:key="app_ops"
            android:fragment="com.android.settings.applications.appops.AppOpsSummary"
            android:icon="@drawable/ic_settings_appops"
            android:title="@string/app_ops_category" />

</PreferenceScreen>
