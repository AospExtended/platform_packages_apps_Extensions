<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/status_bar_category"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings">

     <org.aospextended.extensions.preference.CardviewPreference
            android:key="systemui_tuner_statusbar"
            android:title="@string/statusbar_items_category"
            android:icon="@drawable/ic_systemui_tuner_statusbaritems" >
            <intent android:action="android.intent.action.MAIN"
                android:targetPackage="com.android.systemui"
                android:targetClass="com.android.systemui.tuner.StatusbarItemsActivity" />
    </org.aospextended.extensions.preference.CardviewPreference>

         <org.aospextended.extensions.preference.CardviewPreference
            android:key="status_bar_clock"
            android:fragment="org.aospextended.extensions.ClockDateSettings"
            android:icon="@drawable/ic_statusbarclock"
            android:title="@string/status_bar_clock_title" />

         <org.aospextended.extensions.preference.CardviewPreference
            android:key="status_bar_battery_style"
            android:fragment="org.aospextended.extensions.StatusbarBatteryStyle"
            android:icon="@drawable/ic_battery_settings"
            android:title="@string/status_bar_battery_style_title" />

         <org.aospextended.extensions.preference.CardviewPreference
            android:key="battery_bar_category"
            android:fragment="org.aospextended.extensions.BatteryBar"
            android:icon="@drawable/ic_battery_bar"
            android:title="@string/battery_bar_title" />

         <org.aospextended.extensions.preference.CardviewPreference
            android:key="traffic"
            android:fragment="org.aospextended.extensions.Traffic"
            android:icon="@drawable/ic_traffic"
            android:title="@string/traffic_title" />

         <org.aospextended.extensions.preference.CardviewPreference
            android:key="carrier_label"
            android:fragment="org.aospextended.extensions.CarrierLabel"
            android:icon="@drawable/ic_carrierlabel"
            android:title="@string/carrierlabel_title" />

         <org.aospextended.extensions.preference.CardviewPreference
            android:key="misc_extensions"
            android:fragment="org.aospextended.extensions.MiscExtensions"
            android:icon="@drawable/ic_misc_extensions"
            android:title="@string/misc_extensions_title" />

</PreferenceScreen>
